<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/red"
    android:scaleType="centerCrop"
    android:paddingLeft="@dimen/fifty"
    android:paddingRight="@dimen/fifty">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <ImageView
            android:layout_width="138dp"
            android:layout_height="93dp"
            android:background="@drawable/logo"
            android:layout_marginBottom="@dimen/fifty"
            android:layout_gravity="center"
            android:id="@+id/imageView" />

        <!-- Email -->
        <EditText
            android:id="@+id/loginEmail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_bottom_line"
            android:paddingLeft="4dp"
            android:hint="@string/email"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_marginBottom="@dimen/ten"
            android:height="@dimen/input_height" />

        <TextView
            android:id="@+id/emptyEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/twenty"
            android:textSize="15dp" />

        <!-- Password -->
        <EditText
            android:id="@+id/loginPassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_bottom_line"
            android:padding="8dp"
            android:fontFamily="sans-serif"
            android:hint="@string/password"
            android:layout_marginBottom="@dimen/ten"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/emptyPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/thirty"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:background="@color/dark_red"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:width="@dimen/submit_button_width" />

        <!-- Link to register screen -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/loginLinkMessage"
            android:id="@+id/register_link"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/thirty"
            android:layout_marginBottom="@dimen/twenty"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</ScrollView>
