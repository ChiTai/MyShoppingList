<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    android:scaleType="centerCrop"
    android:paddingLeft="@dimen/fifty"
    android:paddingRight="@dimen/fifty">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:weightSum="1">

        <ImageView
            android:layout_width="138dp"
            android:layout_height="57dp"
            android:background="@drawable/logo"
            android:layout_marginBottom="@dimen/fifty"
            android:layout_gravity="center"
            android:id="@+id/imageView" />

        <!-- Name -->
        <EditText
            android:id="@+id/registerName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bottom_line"
            android:paddingLeft="4dp"
            android:hint="@string/name"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_marginBottom="30dp"
            android:height="@dimen/input_height" />

        <!-- Firstname -->
        <EditText
            android:id="@+id/registerFirstName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bottom_line"
            android:paddingLeft="4dp"
            android:hint="@string/firstName"
            android:layout_marginBottom="@dimen/thirty"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:height="@dimen/input_height"/>

        <!-- Email -->
        <EditText
            android:id="@+id/registerEmail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bottom_line"
            android:paddingLeft="4dp"
            android:hint="@string/email"
            android:layout_marginBottom="@dimen/thirty"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:height="@dimen/input_height"/>

        <!-- Password -->
        <EditText
            android:id="@+id/registerPassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bottom_line"
            android:padding="8dp"
            android:fontFamily="sans-serif"
            android:hint="@string/password"
            android:layout_marginBottom="@dimen/fifty"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:background="@color/dark_red"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:width="@dimen/submit_button_width" />

        <!-- Link to login screen -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/registerLinkMessage"
            android:id="@+id/login_link"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/thirty"
            android:layout_marginBottom="@dimen/twenty"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</ScrollView>
